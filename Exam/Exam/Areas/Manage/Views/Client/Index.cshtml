@model List<Client>
@{
    int count = 0;
}

<!-- partial -->
<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Client Table</h4>
                        <a asp-controller="Client" asp-action="Create" class="btn btn-success">Create</a>

                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>
                                            No
                                        </th>
                                        <th>
                                            Image
                                        </th>
                                        <th>
                                            Name
                                        </th>
                                        <th>
                                            Description
                                        </th>
                                        <th>
                                            City
                                        </th>
                                        <th>
                                            Settings
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Client client in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td>
                                                @count
                                            </td>
                                            <td class="py-1">
                                                <img src="~/assets/images/@client.Image" alt="image" />
                                            </td>
                                            <td>
                                                @client.Name
                                            </td>
                                            <td>
                                                @client.Description
                                            </td>
                                            <td>
                                                @client.City
                                            </td>
                                            <td>
                                                <a asp-controller="Client" asp-action="Update" asp-route-id="@client.Id" class="btn btn-warning">Update</a>
                                                <a asp-controller="Client" asp-action="Delete" asp-route-id="@client.Id" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- content-wrapper ends -->
</div>